<div class="container">
    <div class="row">
        <div class="col s12">
            <a href="/dashboard" class="grey lighten-1 waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Retour</a>
        </div>
        {{# if success }}
            <div class="center admin-form-ok">
                <h5><i class="material-icons">verified_user</i> Le mot de passe a bien été modifié</h5>
            </div>
        {{ else }}
            {{# if errors }}
            <div class="center admin-form-wrong">
                <h5><i class="material-icons">close</i> Erreur: le mot de passe n'a pas été modifié</h5>
                <ul>
                    {{# each errors }}
                        <li>{{ this.msg }}</li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
        {{/if}}
        <form action="/dashboard/modification-mot-de-passe-magasin" method="post" class="col s12">
            <div class="row">
                <div class="input-field col m12 l6">
                    <input id="oldPassword" type="password" name="oldPassword" class="validate">
                    <label for="oldPassword">Ancien mot de passe:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="newPassword" type="password" name="newPassword" class="validate">
                    <label for="newPassword">Nouveau mot de passe:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="newPasswordVerification" type="password" name="newPasswordVerification" class="validate">
                    <label for="newPasswordVerification">Repetition nouveau mot de passe:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <button class="indigo lighten btn waves-effect waves-light" type="submit" name="action">Enregistrer les modifications
                    <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{{> script/basic}}