<div class="container">
    <div class="row">
        <div class="col s12">
            <a href="/dashboard" class="grey lighten-1 waves-effect waves-light btn"><i class="material-icons left">arrow_back</i>Retour</a>
        </div>
        {{# if success }}
            <div class="center admin-form-ok">
                <h5><i class="material-icons">verified_user</i> L'entreprise a bien été enregistrée</h5>
            </div>
        {{ else }}
            {{# if errors }}
            <div class="center admin-form-wrong">
                <h5><i class="material-icons">close</i> Erreur: l'entreprise n'a pas été enregistrée</h5>
                <ul>
                    {{# each errors }}
                        <li>{{ this.msg }}</li>
                    {{/each}}
                </ul>
            </div>
            {{/if}}
        {{/if}}
        <form action="/dashboard/creation-compte-magasin" method="post" class="col s12">
            <div class="row">
                <div class="input-field col m12 l6">
                    <input id="companyName" type="text" name="companyName" class="validate" value="{{ lastPostItem.companyName }}">
                    <label for="companyName">Nom de l'entreprise:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="login" type="text" name="login" class="validate" value="{{ lastPostItem.login }}">
                    <label for="login">Identifition de connexion:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="mail" type="text" name="mail" class="validate" value="{{ lastPostItem.mail }}">
                    <label for="mail">Email du futur administrateur de la page du magasin:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="password" type="password" name="password" class="validate">
                    <label for="password">Mot de passe:</label>
                </div>
                <div class="input-field col m12 l6">
                    <input id="passwordVerification" type="password" name="passwordVerification" class="validate">
                    <label for="passwordVerification">Répéter mot de passe:</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field col s6">
                    <button class="orange lighten-1 btn waves-effect waves-light" type="submit" name="action">Créer le compte
                    <i class="material-icons right">send</i>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
{{> script/basic}}